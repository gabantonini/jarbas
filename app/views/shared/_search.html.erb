<%= simple_form_for :query, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group">
    <%= f.input :query, class: "form-control string required", id: "query", label: false %>
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
<% end %>
