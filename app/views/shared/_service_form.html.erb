<%= simple_form_for(service) do |f| %>

    <div class="form-inputs">
        <%= f.input :name,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "name", :minlength => 2}%>
        <%= f.input :description,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "description", :maxlength => 500}%>
        <%= f.input :price,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "price" }, placeholder: 'only numbers'%>
        <%= f.input :time_to_answer,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "time_to_answer" }, placeholder: 'only numbers'%>
        <%= f.input :disponibility,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "disponibility" }%>
        <%=f.input :photo, as: :file%>
    </div>

    <div class="form-actions">
        <%= f.button :submit %>
    </div>
<% end %>
