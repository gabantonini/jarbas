<div class="container">
	<div class="row justify-content-center">
		<div class="col-sm-8">
			<h2><%= @service.name %> by <%= @service.user.first_name %></h2>
			<!-- cl_image_tag @service.photo.key, height: 200, width: 300, crop: :fill -->
			<p><%= @service.description %></p>
			<p><%= @service.price %></p>
			<p><%= @service.time_to_answer %></p>
			<p><%= @service.disponibility %></p>
		</div>
	</div>

	<!-- Show reviews -->
	<div class="row justify-content-center">
		<div class="col-sm-8">
			<h2>Confira o que nossos usuários falarm desse serviço:</h2>
			<% @service.reviews.each do |review| %>
				<div class="card my-2">
					<div class="d-flex justify-content-between p-1">
						<h3><%= review.user.first_name.capitalize %></h3>
						<div>
							
							<% if review.user == current_user %>
								<%= link_to edit_review_path(review) do  %>
									<i class="fas fa-edit"></i>
								<% end %>
								<%= link_to review_path(review), method: :delete do  %>
									<i class="fas fa-trash-alt"></i>
								<% end %>
								- 
							<% end %>


							<% review.rating.times do %>
								<i class="far fa-star"></i>
							<% end %>
						</div>	
					</div>
					<p class="p-1"><%= review.content %></p>	
				</div>
			<% end %>
		</div>
	</div>	
</div>
